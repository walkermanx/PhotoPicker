<?xml version="1.0" encoding="utf-8"?>
<com.walkermanx.photopicker.widget.SquareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photoCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@drawable/__picker_photo_bg"
        android:padding="1dip"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/v_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="20dip"
        android:paddingLeft="20dip"
        android:paddingTop="10dip"
        android:paddingEnd="10dip"
        android:paddingRight="10dip"
        android:paddingBottom="20dip"
        android:src="@drawable/__picker_checkbox_bg" />

</com.walkermanx.photopicker.widget.SquareItemLayout>
